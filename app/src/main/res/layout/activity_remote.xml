<?xml version="1.0" encoding="utf-8"?>


<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16dp"
    android:stretchColumns="4"
    android:id="@+id/tableLayout">

    <TableRow>
        <TextView
            android:layout_span = "2"
            android:textSize= "18sp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="TV Power"
            />
        <TextView
            android:layout_span = "1"
            android:layout_column="2"
            android:textSize= "18sp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/powerDisplay"
            />
    </TableRow>


<Space
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    />


    <TableRow>
        <TextView
            android:layout_span = "2"
            android:textSize= "18sp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Volume"
            />
        <TextView
            android:layout_span = "1"
            android:layout_column="2"
            android:textSize= "18sp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/volumeDisplay"
            />
    </TableRow>


    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        />


    <TableRow>
        <TextView
            android:layout_span = "2"
            android:textSize= "18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Current Channel"
            />
        <TextView
            android:layout_span = "1"
            android:layout_column="2"
            android:textSize= "18sp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/currentChannelDisplay"
            />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15sp"
        />

    <TableRow>
    <Button
        android:layout_span="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/button1"
        android:text="1"
        android:onClick="onClick"/>

    <Button

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/button2"
        android:text="2"
        android:onClick="onClick"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button3"
        android:text="3"
        android:onClick="onClick"/>
    </TableRow>

    <TableRow>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button4"
        android:text="4"
        android:onClick="onClick"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/button5"
        android:text="5"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/button6"
        android:text="6"
        android:onClick="onClick"/>
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/button7"
        android:text="7"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/button8"
        android:text="8"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/button9"
        android:text="9"
        android:onClick="onClick"/>
    </TableRow>

    <TableRow>

        <Button
            android:layout_column="0"
            android:id="@+id/chPlus"
            android:text="CH +"
            android:onClick="onClick"/>

    <Button
        android:layout_column="1"
        android:id="@+id/button0"
        android:text="0"
        android:onClick="onClick"/>

        <Button
            android:layout_column="2"
            android:id="@+id/chMinus"
            android:text="CH -"
            android:onClick="onClick"/>

    </TableRow>

    <TableRow>

        <Button
            android:layout_column="0"
            android:id="@+id/CNN"
            android:text="CNN"
            android:onClick="onClick"/>

        <Button
            android:layout_column="1"
            android:id="@+id/FX"
            android:text="FX"
            android:onClick="onClick"/>

        <Button
            android:layout_column="2"
            android:id="@+id/CBS"
            android:text="CBS"
            android:onClick="onClick"/>

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        />

<TableRow>
    <TextView
        android:layout_span = "2"
        android:textSize= "18sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Power "
        />

    <Switch
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/powerSwitch"
        android:tag="powerSwitch"/>

</TableRow>

    <Space
        android:layout_margin="3dp"
        />

<TableRow>
    <SeekBar
        android:layout_span="3"
        android:id="@+id/volumeSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"/>
</TableRow>

    <TableRow>
    <TextView
        android:textSize= "18sp"
        android:layout_column="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Volume"
        />
</TableRow>

</TableLayout>